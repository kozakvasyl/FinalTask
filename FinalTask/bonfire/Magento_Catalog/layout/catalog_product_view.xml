<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="breadcrumbs" destination="product.info.main" before = "-"/>
        <move element="page.main.title" destination="product.info.main" after = "breadcrumbs"/>
        <move element="product.info.review" destination="product.info.main" after = "page.main.title"/>

        <referenceBlock name="product.info.main">
            <container name="stock.sku.tag.wrapper" htmlTag="div" htmlClass="stock-sku-tag-wrapper" after="product.info.price"></container>
            <container name="add.to.wrapper" htmlTag="div" htmlClass="add-to-wrapper" after="product.info"></container>
            <!-- <block name="product.info.overview" after="stock.sku.tag.wrapper"></block> -->
            <block class="Magento\Framework\View\Element\Template" name="custom_addtocart" template="Magento_Catalog::custom_addtocart.phtml"></block>
        </referenceBlock>

        <move element="product.info.type" destination="stock.sku.tag.wrapper" before = "-"/>
        <move element="product.info.sku" destination="stock.sku.tag.wrapper" after = "product.info.type"/>
        <move element="product.attributes" destination="stock.sku.tag.wrapper" after = "-"/>
        <move element="product.info.overview" destination="product.info.main" after = "stock.sku.tag.wrapper"/>
        <move element="view.addto.wishlist" destination="add.to.wrapper" after = "-"/>

        <referenceBlock name="view.addto.compare" remove="true"></referenceBlock>
    </body>
</page>
